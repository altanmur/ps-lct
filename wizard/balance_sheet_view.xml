<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

         <record id="download" model="ir.ui.view">
            <field name="name">Balance Sheet</field>
            <field name="model">balance.sheet.download</field>
            <field name="arch" type="xml">
                <form string="Balance Sheet">
                    <field name="file_name" invisible="1"/>
                    <field name="xls_report" filename="file_name" readonly="1"/>
                </form>
            </field>
        </record>
        
        <record id="accounting_report_view_togo" model="ir.ui.view">
            <field name="name">Balance Sheet</field>
            <field name="model">balance.sheet</field>
            <field name="inherit_id" ref="account.account_common_report_view"/>
            <field name="arch" type="xml">
                <field name="chart_account_id" position="replace"></field>
                <field name="company_id" position= "replace"></field>
                <field name="fiscalyear_id" position="replace"></field>
                <field name="target_move" position="replace"></field>
                <field name="filter" position="replace">
                    <field name="filter" />
                </field>
                <footer position="replace">
                    <button name="print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </field>
        </record>
        
         <record id="action_account_report_bs" model="ir.actions.act_window">
             <field name="name">Balance Sheet</field>
             <field name="res_model">balance.sheet</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="accounting_report_view_togo"/>
             <field name="target">new</field>
             <field name="context" eval="{'default_account_report_id':ref('account.account_financial_report_balancesheet0')}"/>
        </record>
        

        <menuitem icon="STOCK_PRINT" name="Balance Sheet LCT" action="action_account_report_bs" id="account.menu_account_report_bs" parent="account.final_accounting_reports"/>
        

    </data>
</openerp>
